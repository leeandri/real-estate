<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb')}}" alt="property-image-thumb" class="card-img-top">
    {% else %}
        <img src="{{ '/images/properties/empty.jpg' | imagine_filter('thumb')}}" alt="property-image-thumb" class="card-img-top">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface}}mÂ² - {{ property.city}} ({{ property.postalCode }})</p>
        <div class="text-danger" style="font-weight:300; font-size: 2rem;">{{ property.formattedPrice }} $</div>
    </div>
</div>

